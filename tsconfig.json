{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@theme/*": ["packages/.vitepress/theme/*"],
      "@saileui/core/*": ["packages/core/*"],
    },
  },
  "include": [
    "packages",
    "packages/**.vue",
    "packages/**.ts",
    "metadata/*.ts",
    "script/*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.md",
    "**/dist",
  ]
}
