{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "outDir": "lib",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "removeComments": true,
    "isolatedModules": false,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,

    "lib": ["esnext", "dom"],
    "paths": {
      "@": ["packages/*"]
    },
  },
  "include": [
    "packages/**.vue",
    "packages/**.ts",
    "metadata/*.ts",
    "script/*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.md",
    "**/dist",
  ]
}
